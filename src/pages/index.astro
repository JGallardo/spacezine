---
import BaseHead from '../components/BaseHead.astro';
import Button from '../components/Button.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_AUTHOR, SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getStaticPosts } from '../data/posts-static.js';

// Get static posts for preloading
const posts = getStaticPosts()
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 10); // Preload first 10 most recent posts
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={`An art project by ${SITE_AUTHOR}. Found photography â€” exploring the beauty and mystery of space.`} />
    
    <!-- Preload critical pages -->
    <link rel="prefetch" href="/about">
    <link rel="prefetch" href="/archive">
    
    <!-- Preload first 10 archive images -->
    {posts.map(post => 
      post.data.heroImage && (
        <link rel="preload" as="image" href={post.data.heroImage}>
      )
    )}
		<style>
      
      .hero-section {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 48px;
        align-items: center;
        margin-bottom: 32px;
      }
      
      .cta-section {
        text-align: center;
        margin-bottom: 32px;
      }
      
      .image-container {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: var(--box-shadow);
      }
      
      .image-container img {
        opacity: 1;
      }
      
      .hero-image img {
        width: 100%;
        height: auto;
        display: block;
      }
      
      @media (max-width: 768px) {
        main {
          padding: 16px;
        }
        
        
        .hero-section {
          grid-template-columns: 1fr;
          gap: 16px;
          margin-bottom: 24px;
        }
        
        .hero-image {
          order: 1;
          margin-bottom: 0;
        }
        
        .hero-content {
          order: 2;
        }
      }
      
    </style>
  </head>
  <body>
    <Header />
    <main>
      <div class="hero-section">
        <div class="hero-image">
          <div class="image-container">
            <img 
              src="/images/space-shark-hero.webp" 
              alt="Space shark artwork" 
              width="800" 
              height="780" 
              loading="eager"
              fetchpriority="high"
            />
          </div>
        </div>
        <div class="hero-content">
          <p>
						This project collects and shares space-related photography, discovered in old textbooks and scanned in. Each image tells its own quiet story of exploration, wonder, and perspective.
					</p>
					<p>
						What stories do these forgotten images tell? How do they shape our understanding of space, art, and human curiosity?
					</p>
        </div>
      </div>
      <div class="cta-section">
        <Button href="/archive">Browse the Archive</Button>
      </div>
    </main>
    <Footer />
  </body>
</html>
