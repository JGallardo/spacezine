---
import BaseHead from '../components/BaseHead.astro';
import Button from '../components/Button.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_AUTHOR, SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getWordPressPosts } from '../lib/wordpress.js';

// Get WordPress posts for preloading
const posts = (await getWordPressPosts())
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 10); // Preload first 10 most recent posts
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={`An art project by ${SITE_AUTHOR}. Found photography â€” exploring the beauty and mystery of space.`} />
    
    <!-- Preload critical pages -->
    <link rel="prefetch" href="/about">
    <link rel="prefetch" href="/archive">
    
    <!-- Preload first 10 archive images -->
    {posts.map(post => 
      post.data.heroImage && (
        <link rel="preload" as="image" href={post.data.heroImage}>
      )
    )}
		<style>
      
      .hero-section {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 48px;
        align-items: center;
        margin-bottom: 32px;
      }
      
      .cta-section {
        text-align: center;
        margin-bottom: 32px;
      }
      
      .image-container {
        background-color: #87CEEB;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: var(--box-shadow);
        position: relative;
        min-height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      
      .image-container::before {
        content: '';
        position: absolute;
        width: 20px;
        height: 20px;
        border: 2px solid rgba(255,255,255,0.3);
        border-top: 2px solid rgba(255,255,255,0.8);
        border-radius: 50%;
        animation: spin 1s linear infinite;
        z-index: 1;
      }
      
      .image-container img {
        opacity: 0;
        transition: opacity 0.5s ease;
      }
      
      .image-container img.loaded {
        opacity: 1;
      }
      
      .image-container.loaded::before {
        display: none;
      }
      
      .hero-image img {
        width: 100%;
        height: auto;
        display: block;
      }
      
      @media (max-width: 768px) {
        main {
          padding: 16px;
        }
        
        
        .hero-section {
          grid-template-columns: 1fr;
          gap: 16px;
          margin-bottom: 24px;
        }
        
        .hero-image {
          order: 1;
          margin-bottom: 0;
        }
        
        .hero-content {
          order: 2;
        }
      }
      
      @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <div class="hero-section">
        <div class="hero-image">
          <div class="image-container">
            <img 
              src="/images/space-shark-hero.webp" 
              alt="Space shark artwork" 
              width="800" 
              height="780" 
              loading="eager"
              fetchpriority="high"
            />
          </div>
        </div>
        <div class="hero-content">
          <p>
						This project collects and shares space-related photography, discovered in old textbooks and scanned in. Each image tells its own quiet story of exploration, wonder, and perspective.
					</p>
					<p>
						What stories do these forgotten images tell? How do they shape our understanding of space, art, and human curiosity?
					</p>
        </div>
      </div>
      <div class="cta-section">
        <Button href="/archive">Browse the Archive</Button>
      </div>
    </main>
    <Footer />
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const img = document.querySelector('.hero-image img');
        const container = document.querySelector('.image-container');
        
        if (img && container) {
          img.onload = () => {
            img.classList.add('loaded');
            container.classList.add('loaded');
          };

          if (img.complete) {
            img.classList.add('loaded');
            container.classList.add('loaded');
          }
        }
      });
    </script>
  </body>
</html>
